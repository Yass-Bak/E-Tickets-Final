@model QRCodeModel

@{
    ViewData["Title"] = "Récupérer votre voucher code";
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="QRCodeText" class="control-label">Confirmer votre nom d'utilisateur</label>

                    <input asp-for="QRCodeText" class="form-control" />
                    <span asp-validation-for="QRCodeText" class="text-danger"></span>
                    <span class="text-danger">@ViewBag.Message</span>
                </div>
                <div class="form-group">
                    <hr />
                    <input type="submit" value="Récupérer votre code d'achat" class="btn btn-primary" />
                </div>
            </form>
            <div class="form-group">
                <hr />
                <img src="@ViewBag.QrCodeUri" class="card-img" style="width: 400px; height: 400px;" />
            </div>
            <div class="form-group">
                <hr />
                <a class="btn btn-outline-secondary" asp-controller="Movies" asp-action="Index">Tous Afficher</a>
            </div>
        </div>
    </div>
</div>